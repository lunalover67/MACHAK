<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:paddingTop="48dp"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <!-- Terminal Section at Top -->
    <LinearLayout
        android:id="@+id/terminal_container"
        android:layout_width="0dp"
        android:layout_height="220dp"
        android:background="@android:color/white"
        android:elevation="4dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/purchase_log_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E0E0E0"
            android:fontFamily="monospace"
            android:padding="8dp"
            android:text="PURCHASE LOG"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ScrollView
            android:id="@+id/terminal_scroll"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:id="@+id/terminal_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:text="TERMINAL"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <!-- Input Fields Section - All in one row: amount, location, tag -->
    <EditText
        android:id="@+id/amountTest"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:hint="amount"
        android:inputType="numberDecimal"
        android:minHeight="48dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintEnd_toStartOf="@id/locationTest"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/terminal_container"
        app:layout_constraintWidth_percent="0.3" />

    <EditText
        android:id="@+id/locationTest"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:hint="location"
        android:inputType="text"
        android:minHeight="48dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintEnd_toStartOf="@+id/spinnerTest"
        app:layout_constraintStart_toEndOf="@id/amountTest"
        app:layout_constraintTop_toTopOf="@id/amountTest"
        app:layout_constraintWidth_percent="0.35" />

    <Spinner
        android:id="@+id/spinnerTest"
        android:layout_width="0dp"
        android:layout_height="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/locationTest"
        app:layout_constraintTop_toTopOf="@id/amountTest"
        app:layout_constraintWidth_percent="0.27" />

    <!-- Action Buttons Row with Submit -->
    <LinearLayout
        android:id="@+id/action_buttons_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="start"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/amountTest">

        <ImageButton
            android:id="@+id/quickadd_pool"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginEnd="8dp"
            android:onClick="quickAddTransaction"
            android:src="@drawable/swim_unclicked"
            android:scaleType="fitCenter"
            android:contentDescription="Pool quick add"
            android:background="?attr/selectableItemBackground" />

        <ImageButton
            android:id="@+id/quickadd_busfare"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginEnd="12dp"
            android:onClick="quickAddTransaction"
            android:src="@drawable/bus_unclicked"
            android:scaleType="fitCenter"
            android:contentDescription="Bus fare quick add"
            android:background="?attr/selectableItemBackground" />

        <!-- Submit Button -->
        <Button
            android:id="@+id/button"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:onClick="submitTransaction"
            android:text="SUBMIT" />
    </LinearLayout>

    <!-- SPENT Label -->
    <TextView
        android:id="@+id/spent_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="___MONTH___"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/action_buttons_layout" />

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/spent_progress_bar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/white"
        android:max="100"
        android:progress="0"
        android:progressBackgroundTint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spent_label" />

    <!-- Pie Chart at Bottom -->
    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/tag_chart_test"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spent_progress_bar" />

</androidx.constraintlayout.widget.ConstraintLayout>